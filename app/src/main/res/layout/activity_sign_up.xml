<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#ffffff"
    tools:context=".SignUp">

    <EditText
        android:padding="5dp"
        android:background="#DAD5D5"
        android:textColor="@color/black"
        android:id="@+id/crname"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Enter your name"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColorHint="@color/black">

    </EditText>
    <EditText
        android:padding="5dp"
        android:background="#DAD5D5"
        android:textColor="@color/black"
        android:id="@+id/cremail"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Enter your email"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColorHint="@color/black">

    </EditText>
    <EditText
        android:padding="5dp"
        android:background="#DAD5D5"
        android:textColor="@color/black"
        android:id="@+id/crpassword"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Password"

        android:layout_marginTop="15dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColorHint="@color/black">

    </EditText>
    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"

       android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:orientation="vertical">
        <RadioButton android:id="@+id/MCA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="MCA"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/BCA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="BCA"


            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>

    <EditText
        android:padding="5dp"
        android:background="#DAD5D5"
        android:textColor="@color/black"
        android:id="@+id/crroll"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Enter your roll"

        android:layout_marginTop="15dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColorHint="@color/black">

    </EditText>

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/crcreate"
        android:text="Create"
        android:textColor="#ffffff"
        android:background="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </Button>



</LinearLayout>